{
  "name": "book-notes-app",
  "version": "1.0.0",
  "description": "A web application for tracking book reading notes",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "init-db": "node -e \"import('./db/init.js').then(module => module.initializeDatabase())\"",
    "reset-db": "node -e \"import('./db/init.js').then(module => module.resetDatabase())\""
  },
  "keywords": ["books", "notes", "postgresql", "railway"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "ejs": "^3.1.9",
    "express": "^4.18.0",
    "pg": "^8.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}